@model InsiderNepalApp.ViewModel.GlobalNewsVM;


<div class="text-center h2" style="font-family:Consolas">Edit Global News</div>
<div style="margin-left:50%; transform:translate(-50%)">
<form asp-action="EditGlobalNews" method="post" enctype="multipart/form-data">
    <input class="form-control" type="hidden" asp-for="GlobalNewsId" />

    <div class="col-sm-8 col-md-10">
            <label asp-for="Title" class="form-label" style="font-weight:bold;">News Title</label>
            <input asp-for="Title" type="text" class="form-control" style="border:2px solid black;">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mt-4 col-md-12"></div>

    <div class="col-sm-8 col-md-12">
            <label asp-for="Content" class="form-label" style="font-weight:bold;">News Content</label>
            <textarea rows="5" class="form-control" asp-for="Content" type="text" style="border:2px solid black;"></textarea>
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>

    <div class="mt-4 col-md-12"></div>


    <div class="mb-3 col-md-10">
        <div class="row">
            <div>
                    <label asp-for="Avatar" class="form-label" style="font-weight:bold;">News Image</label><br />
                    <input class="form-control" asp-for="Avatar" style="border:2px solid black;">
            </div>
            <div class="mt-4 col-md-12"></div>

            <div>
                <img src="@Model.ImageUrl" style="height:100%; width:100%; border-radius:10px" />
            </div>
        </div>

    </div>
        <input type="hidden" asp-for="ImageUrl" style="border:2px solid black;" />
    <div class="mt-4 col-md-12"></div>

    <div class="col-sm-8">
            <label asp-for="PublishDateTime" class="form-label" style="font-weight:bold;">Publish Date</label>
            <input asp-for="PublishDateTime" type="date" class="form-control" style="border:2px solid black;">
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="mt-4 col-md-12"></div>

    <div class="col-sm-5">
            <label asp-for="Author" class="form-label" style="font-weight:bold;">Author Name</label>
            <input asp-for="Author" type="text" class="form-control" style="border:2px solid black;" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mt-4 col-md-12"></div>

    <button type="submit" class="btn btn-primary custom-btn" style="background-color:#00308F">Update</button>
    <a asp-controller="GlobalNews" asp-action="index" class="btn btn-dark custom-btn" style="background-color:#5B3B8C">Back</a>
</form>
</div>
