@model InsiderNepalApp.ViewModel.NationalAdsViewModel;

@{
    ViewData["Title"] = "NationalNews";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title style="font-family:monospace">National News Index</title>
</head>
<body>


    <div>
        <img src="@Model.AdsVM[9].ImageUrl" style="margin-left:50%; transform:translate(-50%);" />
    </div>

    <div style="padding-bottom:40px"></div>
    <div class="newsTopic">
        <div class="text-center h2">National News</div>
    </div>

    <div class="col-md-12 ms-4 row gap-0">
        <div class="mx-auto col-md-12 col-lg-6  col-sm-12">
            @foreach (var nnews in Model.NationalNewsVM)
            {
                <div class="d-flex mt-5 pb-5 col-md-12 col-sm-12 gap-3 border-bottom">
                    <div class="col-md-6 col-sm-6">
                        <div class="newsHeadLine">
                            @{
                                string newsTitle = string.Join(" ", @nnews.Title.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(6)) + "...";
                            }
                            <h3 class="card-title">@newsTitle</h3>
                        </div>
                        <div class="dateAndAuthor">
                            <p class="text-black-50">@nnews.PublishDateTime.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="newsSubContent" style="font-weight:bold">
                            <p>
                                @{
                                    string selectWords = string.Join(" ", @nnews.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(20)) + "...";
                                }
                            </p>
                            @selectWords <a asp-controller="NationalNews" asp-action="ShowNewsInDetail" asp-route-id="@nnews.NationalNewsId" style="color:deepskyblue">Readmore</a>
                        </div>
                        
                        <div class="dateAndAuthor">
                            <p class="text-black-50">- @nnews.Author</p>
                        </div>
                    </div>
                    @*different ways of fitting image in the given dev: fill, contain, cover none, scale-down*@
                    <div class="col-md-6 col-sm-6">
                        <img src="@nnews.ImageUrl" style="width:100%;height:100%; width:340px; height:230px; object-fit:cover; border-radius:10px;" />
                    </div>
                </div>
          

            }
        </div>
        <div class="col-md-3 col-lg-4 mt-5 border-bottom" style="transform:translateX(-20%);">
            @for(int i= 0; i<Model.NationalNewsVM.Count/2; i++)
            {
                <div class="mb-5 pb-5"><img src="@Model.AdsVM[i].ImageUrl" style="margin-bottom:40px; width:400px;height:220px; object-fit:cover; border-radius:10px"> </div>

            }
         
        </div>
    </div>
    <div class="mb-5"></div>
    <div>
        <img src="@Model.AdsVM[10].ImageUrl" style="margin-left:50%; transform:translate(-50%);" />
    </div>
</body>
</html>
