@model IEnumerable<InsiderNepalApp.ViewModel.NationalNewsVM>
@{
    ViewData["Title"] = "NationalNews";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title style="font-family:monospace">National News Index</title>
</head>
<body>

    <nav class="sidenavbar">
        <ul style="margin-top:100px;">
            <li><a asp-controller="NationalNews" asp-action="index"><i class="fa-solid fa-pen-to-square m-2"></i>Edit</a></li>
            <li><a asp-controller="NationalNews" asp-action="index"><i class="fa-solid fa-trash m-2"></i>Delete</a></li>
            <li><a asp-controller="NationalNews" asp-action="addnews"><i class="fa-solid fa-plus m-2"></i>Add</a></li>
        </ul>
    </nav>
    <div class="navbar-toggle">
        <a id="navbar-toggle" class="btn btn-primary" style="background-color:rgb(11,35,81); position:fixed;right:10px;" href="#"><i class="fa-solid fa-bars"></i></a>
    </div>



    <div style="padding-bottom:20px"></div>
    <div class="newsTopic">
        <div class="text-center h2">National News</div>
    </div>


    @foreach (var nnews in Model)
    {
        <div class="pb-3 border-bottom" style="width:44rem">
            <div class="d-flex mt-5  col-12 col-sm-6 col-md-6 gap-2" style="width:50rem;">
                <div class="col-md-6 col-sm-6">
                    <div class="newsHeadLine">
                        <h3 class="card-title">@nnews.Title</h3>
                    </div>
                    <div class="dateAndAuthor">
                        <p class="text-black-50">@nnews.PublishDateTime.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div class="newsContent">

                        <p style="font-weight:bold">
                            @{string selectWords = string.Join(" ", @nnews.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(80))+" . . . . . .";
                        }</p>
                        @selectWords
                    </div>
                    <div class="dateAndAuthor">
                        <p class="text-black-50">- @nnews.Author</p>
                    </div>
                </div>
                @*different ways of fitting image in the given dev: fill, contain, cover none, scale-down*@
                <div class="col-md-6 col-sm-6" style="width:300px; height: 220px;">
                    <img src="@nnews.ImageUrl" class=" col-md-6 h-100 w-100" style="width:100%; height:100%; object-fit:cover; border-radius:10px;" />
                </div>

                @*for edit and delete button *@
            </div>
            <a asp-controller="NationalNews" asp-action="EditNationalNews" asp-route-id="@nnews.NationalNewsId" class="btn btn-success" style="background-color:rgb(43,97,58)">Edit</a>
            <a class="btn btn-danger" style="background-color:rgb(158,3,13)" href="/NationalNews/DeleteConfirmNN?id=@nnews.NationalNewsId">Delete</a>
        </div>

    }
    <script>
        const navbarToggle = document.getElementById("navbar-toggle");
        const sideNavbar = document.querySelector(".sidenavbar");

        navbarToggle.addEventListener("click", () => {
            sideNavbar.classList.toggle("active");
        });
    </script>

</body>
</html>
