@model InsiderNepalApp.ViewModel.AdsVM;

<h3>You sure, want to delete "@Model.Title Ads" permanently?</h3>
<br />

<form asp-action="DeleteAds" method="post">
    <input type="hidden" asp-for="AdsId" />
    <div class="d-flex mt-5 col-12 col-sm-6 col-md-6" style="width:50rem;">
        <div class="col-md-6 col-sm-6">
            <h3 class="card-title" style="font-family:Calibri">@Model.Title</h3>
            <p class="text-black-50">StartDate:@Model.StartDate.ToString("MMM dd, yyyy")</p>
            <p style="font-weight:bold">@Model.Description</p>
            <p class="text-black-50">Price- @Model.Price</p>
            <p class="text-black-50">Contact: @Model.ContactInformation</p>
            <p class="text-black-50">EndDate:@Model.EndDate.ToString("MMM dd, yyyy")</p>
        </div>
        <div class="col-md-6 col-sm-6" style="width:300px; height: 220px;">
            <img src="@Model.ImageUrl" class=" col-md-6 h-100 w-100" style="width:100%; height:100%; object-fit:cover; border-radius:10px;" />
        </div>

    </div>
        <a asp-controller="Ads" asp-action="Index" class="btn btn-primary" style="background-color:#00308F">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>


</form>
 