<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsiderNepalApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InsiderNepalApp.styles.css" asp-append-version="true" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow border-bottom fixed-top  pb-0 mb-5" style="display:flex; flex-wrap:wrap; background-color:rgb(11,35,81); padding-left:10px;">
        <div class="navbarHome">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">InsiderNepalApp</a>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-white">
            <div class="navbarTopics">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="NationalNews" asp-action="ReadNationalNews">National</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="GlobalNews" asp-action="Index">Global</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="BussinessNews" asp-action="Index">Business</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Journal" asp-action="Index">Journal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Culture" asp-action="Index">Culture&LifeStyle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Ads" asp-action="Index">Ads</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>



    <div class="container-fluid overflow-hidden p-5">
        <main role="main" class="mt-5 pt-2 mb-5">
            @RenderBody()

        </main>
    </div>


    <!-- Footer -->

    <footer class="text-center text-lg-start text-muted py-1" style="position:relative; width:100vw; bottom:0; background-color:rgb(11,35,81); ">
