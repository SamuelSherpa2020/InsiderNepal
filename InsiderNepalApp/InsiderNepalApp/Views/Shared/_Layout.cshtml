                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <div class="newsTopic">
                            <h6 class="text-uppercase fw-bold mb-4 text-white">
                                About Us
                            </h6>
                        </div>
                        <p class="text-white">
                            <a href="#!" class="text-reset">About the Post</a>
                        </p><p class="text-white">
                            <a href="#!" class="text-reset">Masthead</a>
                        </p><p class="text-white">
                            <a href="#!" class="text-reset">Integrity</a>
                        </p><p class="text-white">
                            <a href="#!" class="text-reset">Workplace harrassment</a>
                        </p><p class="text-white">
                            <a href="#!" class="text-reset">Policies</a>
                        </p>
