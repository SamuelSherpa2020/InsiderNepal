@using Microsoft.AspNetCore.Identity
@using InsiderNepalApp.Areas.Identity.Data

@inject SignInManager<InsiderNepalAppUser> SignInManager
@inject UserManager<InsiderNepalAppUser> UserManager
<link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
<link href="~/font-awesome/css/all.css" rel="stylesheet" />
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user"></i>@UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link border-0"><i class="fa-solid fa-user"></i>Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
