@using Microsoft.AspNetCore.Identity
@using InsiderNepalApp.Areas.Identity.Data

@inject SignInManager<InsiderNepalAppUser> SignInManager
@inject UserManager<InsiderNepalAppUser> UserManager
<link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
<link href="~/font-awesome/css/all.css" rel="stylesheet" />
<ul class="navbar-nav" style=" padding-left:30%">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user"></i></a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0"><i class="fa-solid fa-right-from-bracket"></i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="fa-solid fa-registered"></i></a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-l"></i></a>
    </li>
}
</ul>
